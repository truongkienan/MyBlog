@model Category
@{
    ViewData["Title"] = $"Edit - {Model.CategoryName}";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@Model.CategoryName</li>
</ol>
@if (TempData["msg"] != null)
{
    <p class="text-success">@TempData["msg"]</p>
}
<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-edit mr-1"></i>
        Edit
    </div>
    <div class="card-body">
        <form method="post" action="/dashboard/category/edit/@Model.CategoryId">
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group mb-2">
                <label asp-for="CategoryName">Topic Name</label>
                <input class="form-control" type="text" asp-for="CategoryName" />
                <span asp-validation-for="CategoryName"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CategoryUrl">Category Url</label>
                <input class="form-control" type="text" asp-for="CategoryUrl" />
                <span asp-validation-for="CategoryUrl"></span>
            </div>
            <div class="row mb-2">              
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Active">Active</label>
                        <select asp-for="Active" class="form-select form-select-sm">
                            <option selected value="true">Enable</option>
                            <option value="false">Disable</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

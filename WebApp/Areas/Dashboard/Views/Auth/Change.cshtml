
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutAuth.cshtml";
}
@model ChangeModel
<div class="col-lg-5">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Change Password</h3></div>
        <div class="card-body">
            <div class="small mb-3 text-muted">
                @if (TempData["msg"] != null)
                {
                    <p class="text-success">@TempData["msg"]</p>
                }
             </div>
            <form method="post" action="/auth/change">
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="OldPassword" type="password" />
                    <label asp-for="OldPassword">Old Password</label>
                    <span asp-validation-for="OldPassword"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="NewPassword" type="password" />
                    <label asp-for="NewPassword">New Password</label>
                    <span asp-validation-for="NewPassword"></span>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <button class="btn btn-primary">Change</button>
                </div>
            </form>
        </div>
    </div>
</div>
